{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build",
    "lib": ["es6", "es2020"],
    "types": ["node", "express", "aws-sdk", "uuid"]
  },
  "exclude": [
    "node_modules"
  ]
}
